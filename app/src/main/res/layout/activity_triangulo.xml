<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris"
    tools:context=".TrianguloActivity">

    <TextView
        android:id="@+id/tvtriangulo"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="TRIANGULO" />

    <ImageView
        android:id="@+id/imarec"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        app:srcCompat="@drawable/triangulo"/>




    <EditText
        android:id="@+id/etbase"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:gravity="center"
        android:hint="BASE" />
    <EditText
        android:id="@+id/etaltura"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:gravity="center"
        android:hint="ALTURA" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvarea"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="italic|bold"
            android:textColor="@color/black"
            android:text="AREA" />

        <TextView
            android:id="@+id/tvrarea"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <Button
        android:id="@+id/btcalcular1"
        android:layout_height="48dp"
        android:layout_width="150dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:onClick="calcular1"
        android:layout_marginLeft="15dp"
        android:text="calcular"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/etladoa"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="Lado A"
            android:inputType="number" />

        <EditText
            android:id="@+id/etladob"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="Lado B"
            android:inputType="number" />

        <EditText
            android:id="@+id/etladoc"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="Lado C"
            android:inputType="number" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvperi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="PERIMETRO" />

        <TextView
            android:id="@+id/tvrperi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/btcalcular2"
        android:layout_height="48dp"
        android:layout_width="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:onClick="calcular2"
        android:text="calcular" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btlimpiar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginRight="5dp"
            android:onClick="limpiar"
            android:layout_weight="1"
            android:text="Limpiar" />

        <Button
            android:id="@+id/btregresar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginLeft="5dp"
            android:onClick="regresar"
            android:layout_weight="1"
            android:text="REGRESAR" />


    </LinearLayout>


</LinearLayout>