<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris"
    tools:context=".RectanguloActivity">


    <TextView
        android:id="@+id/tvrectangulo"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="RECTANGULO" />

    <ImageView
        android:id="@+id/imarec"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        app:srcCompat="@drawable/rectangulo"/>


    <EditText
        android:id="@+id/etbase"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:gravity="center"
        android:hint="BASE" />
    <EditText
        android:id="@+id/etaltura"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:gravity="center"
        android:hint="ALTURA" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvarea"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="italic|bold"
            android:textColor="@color/black"
            android:text="AREA" />

        <TextView
            android:id="@+id/tvrarea"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvperi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="PERIMETRO" />

        <TextView
            android:id="@+id/tvrperi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btcalcular"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginRight="5dp"
            android:onClick="calcular"
            android:layout_weight="1"
            android:text="Calcular" />

        <Button
            android:id="@+id/btlimpiar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginLeft="5dp"
            android:onClick="limpiar"
            android:layout_weight="1"
            android:text="Limpiar" />
    </LinearLayout>

    <Button
        android:id="@+id/btregresar"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:onClick="regresar"
        android:layout_height="55dp"
        android:text="REGRESAR" />



</LinearLayout>